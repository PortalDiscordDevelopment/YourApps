{
	"name": "akairo-template",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"test": "yarn run lint && yarn run build",
		"build": "yarn rimraf dist/ && yarn tsc",
		"lint": "yarn eslint --ext js,jsx,ts,tsx src",
		"format": "yarn prettier --write .",
		"start": "yarn build && node --trace-warnings -r source-map-support/register dist/index.js -r module-alias/register"
	},
	"author": "Tyman",
	"license": "MIT",
	"devDependencies": {
		"@types/common-tags": "^1",
		"@types/node": "^14.14.31",
		"@types/pg": "^8",
		"@types/prettier": "^2",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"discord-api-types": "^0.18.1",
		"eslint": "^7.20.0",
		"eslint-config-prettier": "^8.3.0",
		"prettier": "^2.3.0",
		"rimraf": "^3.0.2",
		"source-map-support": "^0.5.19",
		"typescript": "^4.2.2"
	},
	"dependencies": {
		"@lib/ext": "link:./dist/lib/extensions",
		"@lib/models": "link:./dist/lib/models",
		"common-tags": "^1.8.0",
		"discord-akairo": "^8.1.0",
		"discord.js": "^12.5.3",
		"got": "^11.8.2",
		"pg": "^8.6.0",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.6.4"
	},
	"prettier": {
		"useTabs": true,
		"quoteProps": "consistent",
		"singleQuote": true,
		"trailingComma": "none",
		"endOfLine": "lf"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"ignorePatterns": [
			"dist"
		],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/no-non-null-assertion": "off"
		}
	}
}
