{
	"name": "akairo-template",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"test": "yarn run lint && yarn run build",
		"build": "yarn tsc",
		"lint": "yarn eslint --ext js,jsx,ts,tsx src",
		"format": "yarn prettier --write .",
		"format:check": "yarn prettier --check .",
		"start": "yarn build && node --trace-warnings -r source-map-support/register dist/index.js"
	},
	"author": "Tyman",
	"license": "NPOSL-3.0",
	"devDependencies": {
		"@types/common-tags": "^1.8.1",
		"@types/i18next-fs-backend": "^1.1.2",
		"@types/node": "^17.0.8",
		"@types/pg": "^8.6.3",
		"@types/prettier": "^2.4.2",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"discord-api-types": "^0.26.1",
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-deprecation": "^1.3.2",
		"prettier": "^2.5.1",
		"source-map-support": "^0.5.21",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"@lib/ext": "link:./dist/lib/extensions",
		"@lib/i18n": "link:./dist/languages",
		"@lib/models": "link:./dist/lib/models",
		"common-tags": "^1.8.2",
		"discord-akairo": "github:discord-akairo/discord-akairo",
		"discord.js": "^13.5.1",
		"got": "^11.8.3",
		"i18next": "^21.6.5",
		"i18next-fs-backend": "^1.1.4",
		"pg": "^8.7.1",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.12.5"
	},
	"prettier": {
		"useTabs": true,
		"quoteProps": "consistent",
		"singleQuote": true,
		"trailingComma": "none",
		"endOfLine": "lf",
		"arrowParens": "avoid"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 2022,
			"sourceType": "module",
			"project": "./tsconfig.json"
		},
		"plugins": [
			"@typescript-eslint",
			"deprecation"
		],
		"ignorePatterns": [
			"dist"
		],
		"rules": {
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/no-non-null-assertion": "off",
			"deprecation/deprecation": "error"
		}
	},
	"packageManager": "yarn@3.1.1"
}
