{
	"extends": "@sapphire/ts-config/extra-strict",
	"compilerOptions": {
		"declaration": false,
		"declarationMap": false,
		"removeComments": true,
		"sourceMap": false,
		"inlineSourceMap": true,
		"outDir": "out",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": false
	},
	"include": ["src/**/*.ts", "src/i18n/**/*.json"]
}
