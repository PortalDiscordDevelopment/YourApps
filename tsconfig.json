{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"module": "commonjs",
		"target": "es2020",
		"outDir": "dist",
		"lib": [
			"ESNext",
			"ESNext.Array",
			"ESNext.AsyncIterable",
			"ESNext.Intl",
			"ESNext.Symbol",
			"DOM"
		],
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"paths": {
			"@lib/ext/*": ["src/lib/extensions/*"],
			"@lib/models/*": ["src/lib/models/*"],
			"@lib/models": ["src/lib/models"]
		}
	},
	"include": ["src/**/*", "src/*"],
	"exclude": ["node_modules"]
}
